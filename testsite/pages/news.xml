<Content>
 <Section>
  <Row>
   <Column span="12">
    <Text adminlabel="Blog"><![CDATA[<div class="blog-header">
	<div class="container">
		<h1 class="blog-title">The Blog</h1>
		<p class="lead blog-description">An example blog template.</p>
	</div>
</div>

]]></Text>
   </Column>
  </Row>
 </Section>
 <Section>
  <Row>
   <Column span="12">
    <Text adminlabel="Post List"><![CDATA[<ul>
{% for post in site.posts %}
<li><a href="{{ post.url }}">{{ post.title }}</a>
{{ post.author }}
{{ post.date }}<br/>
{{ post.excerpt }}
</li>
{% endfor %}
</ul>
]]></Text>
   </Column>
  </Row>
 </Section>
</Content>
