<Content>
 <Section fullwidth="true">
  <Row>
   <Column span="12">
    <Text adminlabel="Jumbotron"><![CDATA[<div class="jumbotron">
	<div class="container">
		<h1>News</h1>
		<p class="lead">Example news page.</p>
	</div>
</div>]]></Text>
   </Column>
  </Row>
 </Section>
 <Section>
  <Row>
   <Column span="12">
    <Text adminlabel="Post List"><![CDATA[<ul>
{% for post in site.posts %}
<li><a href="{{ post.url }}">{{ post.title }}</a>
{{ post.author }}
{{ post.date }}<br/>
{{ post.excerpt }}
</li>
{% endfor %}
</ul>
]]></Text>
   </Column>
  </Row>
 </Section>
</Content>
